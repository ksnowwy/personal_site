<h1>Edit user</h1>
<div class="user_form">
<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Update", :class => "button" %>
  </div>
<% end %>

<div class="gravatar_link">
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails" target="_blank">Change your Gravatar</a>
</div>

</div><!--user_form-->